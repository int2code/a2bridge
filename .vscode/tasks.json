{
    "version": "2.0.0",
    "tasks": [
        {
            "type": "shell",
            "label": "Flash Debug",
            "command": "${STM32_PRG_PATH}/STM32_Programmer_CLI",
            "args": [
                "--connect",
                "port=swd",
                "--download",
                "${workspaceFolder}/artifacts/a2bridge_debug_cm7.elf",
                "-hardRst",
                "-rst",
                "--start"
            ],
            "options": {
                "cwd": "${workspaceFolder}"
            },
            "problemMatcher": [],
            "hide": true
        },
        {
